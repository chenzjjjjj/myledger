<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".view.ExportAndImportActivity"
        android:orientation="vertical">
    <com.chenzj.myledger.view.ui.component.HeaderBarView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#4588f5"
            app:headerCenterTextColor="#FFF"
            app:headerCenterTextSize="14dp"
            app:headerCenterTitle="导出"
            app:headerCenterTitle2Visibility="gone"
            app:headerLeftDrawble="@drawable/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="vertical">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="290dp"
                       android:layout_gravity="top"
                       android:scaleType="fitXY"
                       android:padding="20dp"
                       android:background="@color/yellow_0"
                       android:src="@drawable/excel"
            />
            <TextView android:layout_width="match_parent"
                      android:paddingTop="30dp"
                      android:paddingLeft="30dp"
                      android:paddingRight="30dp"
                      android:textColor="@color/yellow_5"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_size_16"
                      android:text="@string/introduction_export"/>

            <TextView android:layout_width="match_parent"
                      android:paddingLeft="30dp"
                      android:paddingRight="30dp"
                      android:paddingTop="15dp"
                      android:layout_height="wrap_content"
                      android:textColor="@color/yellow_5"
                      android:textSize="@dimen/sp_size_16"
                      android:text="@string/introduction_import"/>
</LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingBottom="25dp"
            android:orientation="vertical">
        <Button android:id="@+id/btn_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button1"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:text="导出"
                android:textSize="@dimen/sp_size_16"
                android:focusable="false" />
        <Button android:id="@+id/btn_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/translucent_button"
                android:textColor="@color/white"
                android:text="导入"
                android:textSize="@dimen/sp_size_16"
                android:focusable="false" />
    </LinearLayout>

</LinearLayout>

