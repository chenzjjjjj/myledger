<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.home.HomeFragment">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <com.chenzj.myledger.view.ui.component.HeaderBarView
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#4588f5"
                app:headerCenterTextColor="#FFF"
                app:headerCenterTextSize="14dp"
                app:headerCenterTitle="记账"
                app:headerCenterTitle2Visibility="gone"
                app:headerLeftDrawble="@drawable/ic_back"
                app:headerRightDrawable="@drawable/ic_more_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout android:layout_width="match_parent"
                      android:background="@color/gray_1"
                      android:layout_height="match_parent" android:orientation="vertical">

            <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listview_ledger"
                    tools:ignore="MissingConstraints" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_add"
                    android:id="@+id/fab_add_ledger"
                    app:backgroundTint="@color/blue"
                    app:fabSize="normal"
                    app:borderWidth="0dp"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>