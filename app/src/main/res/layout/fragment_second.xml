<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SecondFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white" tools:layout_editor_absoluteY="26dp" tools:layout_editor_absoluteX="0dp">

        <ImageView
                android:id="@+id/LogoImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/logo4"/>

        <TextView
                android:id="@+id/textview_first"
                android:text="@string/introduction_second_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#808080"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@id/button_first"
        />
        <Button
                android:id="@+id/button_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:textColor="#FDFEFF"
                android:textSize="18sp"
                android:layout_marginTop="90dp"
                android:text="进  入"
                android:background="@drawable/button1"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>